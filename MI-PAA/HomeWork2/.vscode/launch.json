    "version": "0.2.0",
    "configurations": [
        {
            "name": "KnapsackSolver",
            "type": "python",
            "request": "launch",
            "args": [
                "--dataFile", "${workspaceFolder}/data/NK/NK4_inst.dat",
                "--check-time", "False",
                "--time-retries", "5",
                "-e", "10",
                "-s", "DP_Weight"
            ],
            "program": "${workspaceFolder}/src/knapsackSolver.py",
            // "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Output_generator: files",
            "type": "python",
            "request": "launch",
            "args": [
                "files",
                "-s", "FPTAS",
                "-e", "10",
                "--start-count", "4",
                "--check-time", "True",
                "--time-retries", "1000",
                "${workspaceFolder}/data/NK", 
                "${workspaceFolder}/analysisOutput/results"
            ],
            "program": "${workspaceFolder}/src/output_generator.py",
            "console": "integratedTerminal"
        }
    ]
}