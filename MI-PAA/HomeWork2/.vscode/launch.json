    "version": "0.2.0",
    "configurations": [
        {
            "name": "KnapsackSolver",
            "type": "python",
            "request": "launch",
            "args": [
                "--dataFile", "${workspaceFolder}/data/NK/NK4_inst.dat",
                "-s", "DP"
            ],
            "program": "${workspaceFolder}/src/knapsackSolver.py",
            // "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Output_generator: files",
            "type": "python",
            "request": "launch",
            "args": [
                "files",
                "-s", "DP",
                "--start-count", "4",
                "${workspaceFolder}/data/NK", 
                "${workspaceFolder}/analysisOutput/results"
            ],
            "program": "${workspaceFolder}/src/output_generator.py",
            "console": "integratedTerminal"
        },
        {
            "name": "output_to_csv",
            "type": "python",
            "request": "launch",
            "args": [
                "output-to-csv",
                "${workspaceFolder}/analysisOutput/results",
                "${workspaceFolder}/analysisOutput"
            ],
            "program": "${workspaceFolder}/src/helpers.py",
            "console": "integratedTerminal"
        },
        {
            "name": "sums",
            "type": "python",
            "request": "launch",
            "args": [
                "sums",
                "${workspaceFolder}/analysisOutput/results",
                "${workspaceFolder}/analysisOutput"
            ],
            "program": "${workspaceFolder}/src/helpers.py",
            "console": "integratedTerminal"
        },
    ]
}