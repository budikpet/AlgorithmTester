    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "AlgorithmTester: run",
            "type": "python",
            "request": "launch",
            "args": [
                // "-s", "Greedy", // "Brute,Greedy,BB",
                // "--time-retries", "1000",
                // "-e", "10",
                // "--check-time","True",
                "-n", "1",
                "--relative-mistake", "0.5",
                "-p", "KnapsackParser"
                "${workspaceFolder}/data/NK",
                "${workspaceFolder}/analysis/tester_results/TEST"
            ],
            "module": "algorithm_tester",
            "console": "integratedTerminal"
        },
        {
            "name": "AlgorithmTester: help",
            "type": "python",
            "request": "launch",
            "args": [
                "--help"
            ],
            "module": "algorithm_tester",
            "console": "integratedTerminal"
        }
    ]
}