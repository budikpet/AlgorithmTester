        {
            "name": "AlgorithmTester: run",
            "type": "python",
            "request": "launch",
            "args": [
                // "-s", "Greedy", // "Brute,Greedy,BB",
                // "--time-retries", "1000",
                // "-e", "10",
                "-s", "SA_SAT_V3",
                "-r", "base",
                "--init-temperature", "1000.0",
                "--cooling", "0.995",
                "--min-temperature", "0.5",
                "--cycles", "50",
                "--max-retry-attempts", "3",
                "--check-time","True",
                // "-n", "1",
                // "--relative-mistake", "0.5",
                // "--relative", "0.lll",
                "-p", "SATParser",
                // "--create-evo-file", "True",
                "--input-dir", "${workspaceFolder}/data/wuf-M/wuf20-78-M",
                "--output-dir", "${workspaceFolder}/analysis/tester_results/TEST"
            ],
            "module": "algorithm_tester",
            "console": "integratedTerminal"
        },
        {
            "name": "AlgorithmTester: help",
            "type": "python",
            "request": "launch",
            "args": [
                "--help"
            ],
            "module": "algorithm_tester",
            "console": "integratedTerminal"
